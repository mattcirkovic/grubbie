        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poetsen+One&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&family=Poetsen+One&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="styles/layout.css">
        <link rel="stylesheet" href="styles/content.css">
    </head>
    <body>
        <div class="login-box contianer-fluid">
            <div class="login-title-box">
                <h1 class="login-title">Grubbie</h1>
                <p class="login-text">Don't waste food again</p>
            </div>
            <div class="login-body-box">
                <div class="row container-fluid">
                    <div class="login-shape-box col-sm-12 col-md-7">
                        <img class="shape banana" src="assets/images/login/banana.svg" alt="banana">
                        <img class="shape grapes" src="assets/images/login/grapes.svg" alt="grapes">
                        <img class="shape orange" src="assets/images/login/orange.svg" alt="orange">
                        <img class="shape pizza" src="assets/images/login/pizza.svg" alt="pizza">
                    </div>
                    <div class="login-form-box col-sm-12 col-md-5">
                        <form class="login-form" method="post" action="/login">
                            <div class="form-group mb-3">
                              <label for="emailInput">Email address</label>
                              <input type="text" class="form-control" id="emailInput" aria-describedby="emailHelp" placeholder="someone@something.com">
                            </div>
                            <div class="form-group mb-3">
                              <label for="passwordInput">Password</label>
                              <input type="text" class="form-control" id="passwordInput" placeholder="Password">
                            </div>
                            <div class="form-buttons mb-3">
                                <button type="submit" class="btn btn-primary" value="login">Login</button>
                                <p>or</p>
                                <button type="submit" class="btn btn-secondary" value="register" formaction="/register">Register</button>
                            </div>
                          </form>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
